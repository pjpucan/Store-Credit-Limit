<!-- templates/customers/order.liquid -->

<section>
  <div class="py-12
    {{ settings.x_margin }}
    {{ settings.x_alignment }}">

    {% comment %} Heading {% endcomment %}
    <div class="flex flex-col w-full gap-4 mb-4 max-w-prose">
      <h1>
        {{ 'labels.account' | t }}
      </h1>
      <div>
        <a href="{{ routes.account_url }}" class="btn btn--plain btn--smaller">{{ 'actions.back' | t }}</a>
      </div>
    </div>

    {% comment %} Content {% endcomment %}
    <div class="flex flex-wrap items-start pt-8 border--t-width color__border-divider-1 md:gap-x-16 md:gap-y-0 gap-y-8">
      
      {% comment %} Sidebar {% endcomment %}
      <div class="w-full pb-8 md:w-auto border--b-width color__border-divider-1 grow">
        
        <p class="mb-4 type__heading">
          {{ 'labels.billing_address' | t }}
        </p>
        <div class="type--small">
          <p class="mb-1">
            {{ order.customer.name }}
          </p>
          <p class="mb-1">
            {{ order.email }}
          </p>
          {% if order.billing_address %}
            <p class="mb-1">{{ order.billing_address.address1 }}</p>
            {% if order.billing_address.address2 != blank %}
              <p class="mb-1">{{ order.billing_address.address2 }}</p>
            {% endif %}
            <p class="mb-1">
              {{ order.billing_address.city }}, 
              {% if order.billing_address.province_code %}
                {{ order.billing_address.province_code }}
              {% endif %}
              , {{ order.billing_address.country_code }}
            </p>
            <p class="mb-1">{{ order.billing_address.zip_code }}</p>
            <p class="mb-0">{{ order.billing_address.phone }}</p>
          {% endif %}
        </div>

        
        <p class="mt-8 mb-4 type__heading">
          {{ 'labels.shipping_address' | t }}
        </p>
        <div class="type--small">
          <p class="mb-1">
            {{ order.customer.name }}
          </p>
          <p class="mb-1">
            {{ order.email }}
          </p>
          {% if order.shipping_address %}
            <p class="mb-1">{{ order.shipping_address.address1 }}</p>
            {% if order.shipping_address.address2 != blank %}
              <p class="mb-1">{{ order.shipping_address.address2 }}</p>
            {% endif %}
            <p class="mb-1">
              {{ order.shipping_address.city }}, 
              {% if order.shipping_address.province_code %}
                {{ order.shipping_address.province_code }}
              {% endif %}
              , {{ order.shipping_address.country_code }}
            </p>
            <p class="mb-1">{{ order.shipping_address.zip_code }}</p>
            <p class="mb-0">{{ order.shipping_address.phone }}</p>
          {% endif %}
        </div>
      </div>
      
      {% comment %} Main content {% endcomment %}
      <div class="flex flex-col w-full md:w-2/3">

        <div class="flex flex-row flex-wrap items-end justify-between">
          <div class="w-full mb-2 max-w-prose md:w-auto">
            
            <p class="mb-2 type__heading">
              {{ 'labels.order' | t }} {{ order.name }}
            </p>
            {% render 'component__badge', 
              background: 'transparent',
              text: 'dark',
              border: 'dark',
              icon: '',
              content: order.financial_status %}
            {% render 'component__badge', 
              background: 'transparent',
              text: 'dark',
              border: 'dark',
              icon: '',
              content: order.fulfillment_status %}
          </div>
          <div class="w-full mb-2 md:w-auto">
            {% assign reorder_url = "" %}
            {% for line_item in order.line_items %}
              {% capture reorder_url %}{{ reorder_url | append: line_item.variant_id | append: ':' | append: line_item.quantity | append: ',' }}{% endcapture %}
            {% endfor %}
            <a href="{{ '/cart/' | append: reorder_url }}" class="btn btn--small btn--secondary">{{ 'actions.reorder' | t }}</a>
          </div>
        </div>

        <table class="min-w-full">
          <tbody class="bg-white">

            {% for line_item in order.line_items %}              
              <tr class="py-2 border--b-width color__border-divider-1">
                <td class="py-4">
                  {{ line_item.title | link_to: line_item.product.url }}
                  {{ line_item.selling_plan_allocation.selling_plan.name }}
                  <dl class="m-0">
                    <dd class="m-0 truncate opacity-75 type--small">{{ line_item.selling_plan_allocation.selling_plan.name }}</dd>
                  </dl>
                  <dl class="m-0">
                    <dd class="m-0 truncate opacity-75 type--small">{{ line_item.sku }}</dd>
                  </dl>
                  <dl class="m-0 md:hidden">
                    <dd class="mt-1 mb-0 truncate">
                      {% render 'component__format-price', price: line_item.original_price %} x {{ line_item.quantity }}
                    </dd>
                  </dl>
                  {% if line_item.unit_price > 0 %}
                    <dl class="m-0">
                      <dd class="m-0 truncate opacity-75 type--small">
                        {% render 'component__format-price', price: line_item.unit_price %}
                        / {{ line_item.unit_price_measurement.reference_value }}{{ line_item.unit_price_measurement.reference_unit }}
                      </dd>
                    </dl>              
                  {% endif %}
                </td>
                <td class="hidden py-4 align-bottom md:table-cell">
                  {% render 'component__format-price', price: line_item.original_price %}

                  {% if line_item.unit_price > 0 %}
                    <dl class="m-0">
                      <dd class="m-0 truncate opacity-75 type--small">
                        {% render 'component__format-price', price: line_item.unit_price %}
                        / {{ line_item.unit_price_measurement.reference_value }}{{ line_item.unit_price_measurement.reference_unit }}
                      </dd>
                    </dl>              
                  {% endif %}
                </td>
                <td class="hidden py-4 align-bottom md:table-cell">{{ line_item.quantity }}</td>
                <td class="py-4 text-right align-bottom">
                  {% render 'component__format-price', price: line_item.final_line_price %}
                </td>
              </tr>
            {% endfor %}

          </tbody>
        </table>

        <div class="self-end w-full md:w-1/2">
          {% if cart.taxes_included %}
            <div class="grid items-end grid-cols-2 gap-2 py-4 border--b-width color__border-divider-1 md:gap-4">
              
              <div>
                {{ 'info.tax_included' | t }}
              </div> 
            </div>
          {% endif %}
          <div class="grid items-end grid-cols-2 gap-2 py-4 border--b-width color__border-divider-1 md:gap-4">
            
            <div>
              {{ 'labels.subtotal' | t }}
            </div> 
            <div class="text-right">
              {% render 'component__format-price', price: order.line_items_subtotal_price %}
            </div>
          </div>
          {% if order.shipping_price > 0 %}
            <div class="grid items-end grid-cols-2 gap-2 py-4 border--b-width color__border-divider-1 md:gap-4">
              
              <div>
                {{ 'labels.shipping' | t }}
                <dl class="m-0">
                  {% for method in order.shipping_methods %}
                    <dd class="pr-1 m-0 truncate opacity-75 type--small">
                      {{ method.title }}
                    </dd>
                  {% endfor %}
                </dl>
              </div> 
              <div class="text-right">
                {% render 'component__format-price', price: order.shipping_price %}
              </div>
            </div>
          {% endif %}
          {% if order.total_discounts > 0 %}
            <div class="grid items-end grid-cols-2 gap-2 py-4 border--b-width color__border-divider-1 md:gap-4">
              
              <div>
                {{ 'labels.discounts' | t }}
                <dl class="m-0">
                  {% for discount_application in order.discount_applications %}
                    <dd class="pr-1 m-0 truncate opacity-75 type--small">
                      {{ discount_application.title }} -
                      {% render 'component__format-price', price: discount_application.total_allocated_amount %}
                    </dd>
                  {% endfor %}
                </dl>
              </div> 
              <div class="text-right">
                -
                {% render 'component__format-price', price: order.total_discounts %}
              </div>
            </div>
          {% endif %}
          {% if order.tax_price > 0 %}
            <div class="grid items-end grid-cols-2 gap-2 py-4 border--b-width color__border-divider-1 md:gap-4">
              
              <div>
                {{ 'labels.tax' | t }}
                <dl class="m-0">
                  {% for tax_line in order.tax_lines %}
                    <dd class="pr-1 m-0 truncate opacity-75 type--small">
                      ({{ tax_line.title }} {{ tax_line.rate | times: 100 }}%): 
                      {% render 'component__format-price', price: tax_line.price %}
                    </dd>
                  {% endfor %}
                </dl>
              </div> 
              <div class="text-right">
                {% render 'component__format-price', price: order.tax_price %}
              </div>
            </div>
          {% endif %}
          <div class="grid items-end grid-cols-2 gap-2 py-4 border--b-width color__border-divider-1 md:gap-4">
            <div>
              
              <strong>{{ 'labels.total' | t }}</strong>
            </div> 
            <div class="text-right">
              <strong>
                {% render 'component__format-price', price: order.total_price %}
              </strong>
            </div>
          </div>
          {% if order.total_refunded_amount > 0 %}
            <div class="grid items-end grid-cols-2 gap-2 py-4 border--b-width color__border-divider-1 md:gap-4">
              
              <div>
                {{ 'labels.refund' | t }}
              </div> 
              <div class="text-right">
                -
                {% render 'component__format-price', price: order.total_refunded_amount %}
              </div>
            </div>
          {% endif %}
          
        </div>

      </div>
      
    </div>

  </div>
</section>