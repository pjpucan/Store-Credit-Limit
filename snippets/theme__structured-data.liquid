<!-- snippets/theme__structured-data.liquid -->
{% comment %} 
  This file includes structured data for better SEO visibility. It uses the JSON-LD format to provide search engines with information about the website and its content.

  Globals: 
    - favicon: {object} Set the favicon image.
    - social_instagram_link: {string} Set the link to Instagram.
    - social_twitter_link: {string} Set the link to Twitter.
    - social_facebook_link: {string} Set the link to Facebook.
    - social_pinterest_link: {string} Set the link to Pinterest.
    - social_snapchat_link: {string} Set the link to Snapchat.
    - social_tumblr_link: {string} Set the link to Tumblr.
    - social_youtube_link: {string} Set the link to YouTube.
    - social_vimeo_link: {string} Set the link to Vimeo.
    - enable_local_business: {boolean} Enable or disable local business structured data.

  Usage:
    {% render 'theme__structured-data' %}

  Recommendations: 
  - For stores with a single physical location, enabling the 'settings.enable_local_business' will help improve local SEO. Your address will be included in structured data along with your logo.
{% endcomment %}

{% if template.name == "index" %} 
  <script type="application/ld+json">
    {
      "@context": "http://schema.org",
      "@type": "WebSite",
      "name": "{{ shop.name }}",
      "url": "{{ shop.url }}{{ page.url }}",
      "potentialAction": {
        "@type": "SearchAction",
        "target": "{{ shop.url }}/search?q={search_term_string}",
        "query-input": "required name=search_term_string"
      }
    }
  </script>
  
  <script type="application/ld+json">
    {
      "@context": "http://schema.org",
      "@type": "Organization",
      "name": "{{ shop.name }}",
      "url": "{{ shop.url }}{{ page.url }}",
      {% if settings.favicon %}
        "logo": "https:{{ settings.favicon | image_url: original }}",
      {% endif %}
      "sameAs": [
        "{{ settings.social_twitter_link }}",
        "{{ settings.social_facebook_link }}",
        "{{ settings.social_pinterest_link }}",
        "{{ settings.social_instagram_link }}",
        "{{ settings.social_tumblr_link }}",
        "{{ settings.social_snapchat_link }}",
        "{{ settings.social_youtube_link }}",
        "{{ settings.social_vimeo_link }}"
      ]
    }
  </script>

  {% if settings.enable_local_business %}
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Store",
        "name": "{{ shop.name }}",
        "url": "{{ shop.url }}",
        "telephone": "{{ shop.address.phone }}",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "{{ shop.address.address1 }}",
          "addressLocality": "{{ shop.address.city }}",
          "addressRegion": "{{ shop.address.province }}",
          "postalCode": "{{ shop.address.zip }}",
          "addressCountry": "{{ shop.address.country }}"
        }
      }
    </script>
  {% endif %}
{% endif %}

{% if template.name == 'list-collections' %}
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [{
        "@type": "ListItem",
        "position": 1,
        "name": "Home",
        "item": "{{ shop.url }}"
      },{
        "@type": "ListItem",
        "position": 2,
        "name": "Collections"
      }
      ]
    }
  </script>
{% endif %}

{% if template.name == 'collection' %}
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [{
        "@type": "ListItem",
        "position": 1,
        "name": "Home",
        "item": "{{ shop.url }}"
      },{
        "@type": "ListItem",
        "position": 2,
        "name": "Collections",
        "item": "{{ shop.url }}/collections"
      },{
        "@type": "ListItem",
        "position": 3,
        "name": "{{ collection.title }}"
      }
      ]
    }
  </script>
{% endif %}

{% if template.name == 'product' %}
  <meta itemprop="name" content="{{ product.title }}">
  <meta itemprop="url" content="{{ shop.url }}{{ product.url }}">
  <meta itemprop="brand" content="{{ product.vendor }}">
  <meta itemprop="image" content="https:{{ page_image | image_url: width: 900 }}">
  <meta itemprop="description" content="{{ product.description | strip_html }}">
  
  {% liquid
    if product.selected_or_first_available_variant.featured_media
      assign seo_media = product.selected_or_first_available_variant.featured_media
    else
      assign seo_media = product.featured_media
    endif
  %}

  <script type="application/ld+json">
    {
      "@context": "http://schema.org/",
      "@type": "Product",
      "name": {{ product.title | json }},
      "url": {{ request.origin | append: product.url | json }},
      {% if seo_media %}
        "image": [
          {{ seo_media | image_url: width: 1920 | prepend: "https:" | json }}
        ],
      {% endif %}
      "description": {{ product.description | strip_html | json }},
      {% if product.selected_or_first_available_variant.sku != blank %}
        "sku": {{ product.selected_or_first_available_variant.sku | json }},
      {% endif %}
      "brand": {
        "@type": "Brand",
        "name": {{ product.vendor | json }}
      },
      "offers": [
        {% for variant in product.variants %}
          {
            "@type" : "Offer",
            {% if variant.sku != blank %}
              "sku": {{ variant.sku | json }},
            {% endif %}
            {% if variant.barcode.size == 12 %}
              "gtin12": {{ variant.barcode }},
            {% endif %}
            {% if variant.barcode.size == 13 %}
              "gtin13": {{ variant.barcode }},
            {% endif %}
            {% if variant.barcode.size == 14 %}
              "gtin14": {{ variant.barcode }},
            {% endif %}
            "availability" : "http://schema.org/{% if variant.available %}InStock{% else %}OutOfStock{% endif %}",
            "price" : {{ variant.price | money_without_currency | json }},
            "priceCurrency" : {{ cart.currency.iso_code | json }},
            "url" : {{ request.origin | append: variant.url | json }}
          }{% unless forloop.last %},{% endunless %}
        {% endfor %}
      ]
    }
  </script>
  
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [{
        "@type": "ListItem",
        "position": 1,
        "name": "Home",
        "item": "{{ shop.url }}"
      },{
        "@type": "ListItem",
        "position": 2,
        "name": "Categories",
        "item": "{{ shop.url }}/collections"
      },{
        "@type": "ListItem",
        "position": 3,
        "name": "Products",
        "item": "{{ shop.url }}/collections/all"
      },{
        "@type": "ListItem",
        "position": 4,
        "name": "{{ product.title }}"
      }]
    }
  </script>
{% endif %}

{% if template.name == 'article' %}
  <script type="application/ld+json">
    {
      "@context": "http://schema.org",
      "@type": "Article",
      "articleBody": "{{ article.content | strip_html }}",
      "mainEntityOfPage": {
        "@type": "WebPage",
        "@id": "{{ shop.url }}{{ article.url }}"
      },
      "headline": "{{ article.title }}",
      {% if article.excerpt != blank %}
        "description": "{{ article.excerpt | strip_html }}",
      {% endif %}
      "image": [
        "https:{{ page_image | image_url: width: 900 }}"
      ],
      "datePublished": "{{ article.published_at | date: '%Y-%m-%dT%H:%M:%SZ' }}",
      "dateCreated": "{{ article.created_at | date: '%Y-%m-%dT%H:%M:%SZ' }}",
      "author": {
        "@type": "Person",
        "name": "{{ article.author }}"
      },
      "publisher": {
        "@type": "Organization",
        {% if settings.favicon %}
          {% assign image_size = settings.favicon.width | append: 'x' %}
          "logo": {
            "@type": "ImageObject",
            "url": "{{ settings.favicon | image_url: image_size | prepend: "https:" }}",
            "height": "{{ settings.favicon.height }}",
            "width": "{{ settings.favicon.width }}"
          },
        {% endif %}
        "name": "{{ shop.name }}"
      }
    }
  </script>
{% endif %}