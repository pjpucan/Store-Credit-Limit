<!-- snippets/theme__styles.liquid -->
{% comment %} 
  All CSS for theme comes in through here.

  Usage:
    {% render 'theme__styles' %}

  Globals: 
    - settings.type_font_body: set font family for body text
    - settings.type_font_heading: set font family for heading text
    - settings.type_font_nav: set font family for navigation text
    - settings.color_background_body: set the body background color for light mode
    - settings.color_background_body_dark: set the body background color for dark mode
    - settings.color_foreground_body: set the body foreground for light mode (used for text color)
    - settings.color_foreground_body_dark: set the body foreground for dark mode (used for text color)
    - settings.color_background_primary: set the primary background color for light mode
    - settings.background_primary_dark: set the primary background color for dark mode
    - settings.color_foreground_primary: set the primary foreground for light mode
    - settings.foreground_primary_dark: set the primary foreground for dark mode
    - settings.color_background_secondary: set the secondary background color for light mode
    - settings.background_secondary_dark: set the secondary background color for dark mode
    - settings.foreground_secondary_light: set the secondary foreground for light mode
    - settings.foreground_secondary_dark: set the secondary foreground for dark mode
    - settings.border_button_radius: set the border radius for buttons
    - settings.border_input_radius: set the border radius for input elements
    - settings.border_element_radius: set the border radius for secondary elements
    - settings.border_width: set the border width
    - settings.border_dark: set the border color for dark mode
    - settings.type_base_size: set base size for font size
    - settings.type_button_capitilization: set capitilization for button text
{% endcomment %}

{% comment %} Load fonts {% endcomment %}
{% unless settings.type_font_body.system? %}
  <link rel="preload" as="font" href="{{ settings.type_font_body | font_url }}" type="font/woff2" crossorigin>
{% endunless %}
{% unless settings.type_font_heading.system? %}
  <link rel="preload" as="font" href="{{ settings.type_font_heading | font_url }}" type="font/woff2" crossorigin>
{% endunless %}
{% unless settings.type_font_nav.system? %}
  <link rel="preload" as="font" href="{{ settings.type_font_nav | font_url }}" type="font/woff2" crossorigin>
{% endunless %}

{% comment %} Reset animation classes when js not available {% endcomment %}
<noscript><style>
  .js-animation.opacity-0 {
    opacity: 100 !important;
  }
  .js-animation.translate-y-4,
  .js-animation.translate-y-8 {
    transform: translateY(0px) !important;
  }
  .js-image {
    opacity: 100 !important;
  }
  .js-picture {
    animation: none !important;
    opacity: 1 !important;
    filter: blur(0px) !important;
    transform: scale(1) !important;
  }
  .no-js--hide {
    display: none !important;
  }
  .no-js--block {
    display: block !important;
  }
</style></noscript>

{% comment %} Set values {% endcomment %}
{% liquid
  assign type_font_body = settings.type_font_body
  assign type_font_body_bold = settings.type_font_body | font_modify: 'weight', 'bold'
  assign type_font_body_italic = settings.type_font_body | font_modify: 'style', 'italic'
  assign type_font_heading = settings.type_font_heading
  assign type_font_nav = settings.type_font_nav
%}

{% comment %} Create css values {% endcomment %}
{% style %}

  /* Theme variables */
  {{ type_font_body | font_face: font_display: 'swap' }}
  {{ type_font_body_bold | font_face: font_display: 'swap' }}
  {{ type_font_body_italic | font_face: font_display: 'swap' }}
  {{ type_font_heading | font_face: font_display: 'swap' }}
  {{ type_font_nav | font_face: font_display: 'swap' }}
  {% assign scale_ratio = settings.type_scale_ratio | divided_by: 100.00 %}

  :root {
    --color__background-body: {{ settings.color_background_body }};

    --color__text-light: {{ settings.color_foreground_body }};
    --color__text-dark: {{ settings.color_foreground_body_dark }};
    --color__text-link: {{ settings.color_background_primary }};

    --color__background-overlay-1: {{ settings.color_background_body | color_darken: 6 }};
    --color__background-overlay-2: {{ settings.color_background_body | color_darken: 12 }};
    --color__background-overlay-3: {{ settings.color_background_body | color_darken: 24 }};
    --color__background-shade-1: {{ settings.color_background_body | color_darken: 24 | color_modify: 'alpha', 0.1 }};
    --color__background-shade-2: {{ settings.color_background_body | color_darken: 24 | color_modify: 'alpha', 0.2 }};
    --color__background-shade-3: {{ settings.color_background_body | color_darken: 24 | color_modify: 'alpha', 0.3 }};

    --color__border-divider-1: {{ settings.color_background_body | color_darken: 24 | color_modify: 'alpha', 0.3 }};
    --color__border-divider-2: {{ settings.color_background_body | color_darken: 24 | color_modify: 'alpha', 0.4 }};
    --color__border-divider-3: {{ settings.color_background_body | color_darken: 24 | color_modify: 'alpha', 0.5 }};
    --color__border-selected-1: {{ settings.color_background_body | color_darken: 80 | color_modify: 'alpha', 0.7 }};
    --color__border-selected-2: {{ settings.color_background_body | color_darken: 80 | color_modify: 'alpha', 0.8 }};

    --color__background-primary: {{ settings.color_background_primary }};
    --color__foreground-primary: {{ settings.color_foreground_primary }};
    --color__background-secondary: {{ settings.color_background_secondary }};
    --color__foreground-secondary: {{ settings.foreground_secondary_light }};
    --color__background-tertiary: {{ settings.color_background_tertiary }};
    --color__foreground-tertiary: {{ settings.color_foreground_tertiary }};
    --color__background-neutral: {{ settings.color_background_body | color_darken: 6 | color_mix: settings.color_background_primary, 30 | color_lighten: 40 }};
    --color__foregound-neutral: {{ settings.color_foreground_body }};
    --color__background-plain: {{ settings.color_background_body | color_darken: 6 }};
    --color__foreground-plain: {{ settings.color_foreground_body }};

    {% case settings.input_button_style %}
      {% when 'standard' %}
        --color__border-primary: {{ settings.color_background_primary }};
        --color__border-secondary: {{ settings.color_background_secondary }};
        --color__border-tertiary: {{ settings.color_background_tertiary }};
        --color__border-neutral: {{ settings.color_background_body | color_darken: 6 | color_mix: settings.color_background_primary, 30 | color_lighten: 40 }};
        --color__border-plain: {{ settings.color_background_body | color_darken: 6 }};
      {% when 'darker' %}
        --color__border-primary: {{ settings.color_background_primary | color_darken: 16 }};
        --color__border-secondary: {{ settings.color_background_secondary | color_darken: 16 }};
        --color__border-tertiary: {{ settings.color_background_tertiary | color_darken: 16 }};
        --color__border-neutral: {{ settings.color_background_body | color_darken: 6 | color_mix: settings.color_background_primary, 30 | color_lighten: 40 | color_darken: 16 }};
        --color__border-plain: {{ settings.color_background_body | color_darken: 16 }};
      {% when 'lighter' %}
        --color__border-primary: {{ settings.color_background_primary | color_lighten: 16 }};
        --color__border-secondary: {{ settings.color_background_secondary | color_lighten: 16 }};
        --color__border-tertiary: {{ settings.color_background_tertiary | color_lighten: 16 }};
        --color__border-neutral: {{ settings.color_background_body | color_darken: 6 | color_mix: settings.color_background_primary, 30 | color_lighten: 40 | color_lighten: 16 }};
        --color__border-plain: {{ settings.color_background_body | color_lighten: 16 }};
    {% endcase %}

    --sizes__border-button-radius: {{ settings.border_button_radius }}px;
    --sizes__border-input-radius: {{ settings.border_input_radius }}px;
    {% if settings.border_input_radius > 15 %}
      --sizes__border-textarea-radius: 15px;
    {% else %}
      --sizes__border-textarea-radius: {{ settings.border_input_radius }}px;
    {% endif %}
    --sizes__border-element-radius: {{ settings.border_element_radius }}px;
    --sizes__border-button-width: {{ settings.border_button_width }}px;
    --sizes__border-input-width: {{ settings.border_input_width }}px;
    --sizes__border-element-width: {{ settings.border_element_width }}px;
    --sizes__gap-width: {{ settings.gap_size }}px;

    --type__font-100: calc(var(--type__font-200) / {{ scale_ratio }});
    --type__font-200: calc(var(--type__font-300) / {{ scale_ratio }});
    --type__font-300: {{ settings.type_base_size }}px;
    --type__font-400: calc(var(--type__font-300) * {{ scale_ratio }});
    --type__font-500: calc(var(--type__font-400) * {{ scale_ratio }});
    --type__font-600: calc(var(--type__font-500) * {{ scale_ratio }});
    --type__font-700: calc(var(--type__font-600) * {{ scale_ratio }});
    --type__font-800: calc(var(--type__font-700) * {{ scale_ratio }});
    --type__font-900: calc(var(--type__font-800) * {{ scale_ratio }});
    --type__font-1000: calc(var(--type__font-900) * {{ scale_ratio }});
    --type__font-1100: calc(var(--type__font-1000) * {{ scale_ratio }});
    --type__font-1200: calc(var(--type__font-1100) * {{ scale_ratio }});

    --type__font-smaller: clamp(var(--type__font-100), 1vw + 0.5rem, var(--type__font-200));
    --type__font-small: clamp(var(--type__font-200), 1vw + 0.5rem, var(--type__font-300));
    --type__font-base: clamp(var(--type__font-300), 1vw + 0.5rem, var(--type__font-400));
    --type__font-big: clamp(var(--type__font-400), 1vw + 0.5rem, var(--type__font-500));
    --type__font-bigger: clamp(var(--type__font-500), 1vw + 0.5rem, var(--type__font-600));
    --type__font-heading-1: clamp(var(--type__font-800), 4vw + 0.5rem, var(--type__font-1100));
    --type__font-heading-2: clamp(var(--type__font-700), 4vw + 0.5rem, var(--type__font-1000));
    --type__font-heading-3: clamp(var(--type__font-600), 2.3vw + 0.15rem, var(--type__font-900));
    --type__font-heading-4: clamp(var(--type__font-500), 4vw + 0.5rem, var(--type__font-700));
    --type__font-heading-5: clamp(var(--type__font-400), 4vw + 0.5rem, var(--type__font-600));
    --type__font-heading-6: clamp(var(--type__font-300), 4vw + 0.5rem, var(--type__font-500));

    {% if scale_ratio <= 1.08 %}
      --type__font-heading-line: 1.625;
    {% else %}
      --type__font-heading-line: 1.0;
    {% endif %}

    --spacing__font-smaller: calc(var(--type__font-smaller) * 1.625);
    --spacing__font-small: calc(var(--type__font-small) * 1.625);
    --spacing__font-base: calc(var(--type__font-base) * 1.625);
    --spacing__font-big: calc(var(--type__font-big) * 1.625);
    --spacing__font-bigger: calc(var(--type__font-bigger) * 1.625);


    --type__font-body-family: {{ settings.type_font_body.family }}, {{ settings.type_font_body.fallback_families }};
    --type__font-body-style: {{ settings.type_font_body.style }};
    --type__font-body-weight: {{ settings.type_font_body.weight }};
    --type__font-header-family: 'FONTSPRING DEMO - Integral CF';
    --type__font-header-style: {{ settings.type_font_heading.style }};
    --type__font-header-weight: {{ settings.type_font_heading.weight }};
    --type__font-nav-family: {{ settings.type_font_nav.family }}, {{ settings.type_font_nav.fallback_families }};
    --type__font-nav-style: {{ settings.type_font_nav.style }};
    --type__font-nav-weight: {{ settings.type_font_nav.weight }};
    --type__heading-capiliziation: {{ settings.type_heading_capitilization }};
    --type__nav-capiliziation: {{ settings.type_nav_capitilization }};
    --type__button-capiliziation: {{ settings.type_button_capitilization }};

    {% if settings.input_field_color_border == "color__border-divider-1" %}
       --inputs__border: {{ settings.color_background_body | color_darken: 24 | color_modify: 'alpha', 0.3 }} !important;
    {% endif %}
    {% if settings.input_field_color_border == "color__border-selected-1" %}
       --inputs__border: {{ settings.color_background_body | color_darken: 80 | color_modify: 'alpha', 0.7 }} !important;
    {% endif %}
    {% if settings.input_field_color_border == "color__border-primary" %}
       --inputs__border: {{ settings.color_background_primary }} !important;
    {% endif %}
    {% if settings.input_field_color_border == "color__border-secondary" %}
       --inputs__border: {{ settings.color_background_secondary }} !important;
    {% endif %}
    {% if settings.input_field_color_border == "color__border-tertiary" %}
       --inputs__border: {{ settings.color_background_tertiary }} !important;
    {% endif %}
    {% if settings.input_field_color_background == "color__bg-body" %}
      --inputs__background: {{ settings.color_background_body }} !important;
    {% endif %}
    {% if settings.input_field_color_background == "color__bg-shade-2" %}
      --inputs__background: {{ settings.color_background_body | color_darken: 24 | color_modify: 'alpha', 0.2 }} !important;
    {% endif %}
    {% if settings.input_field_color_background == "bg-transparent" %}
      --inputs__background: transparent !important;
    {% endif %}
  }

  /* Set input styling */
  input[type="text"],
  input[type="password"],
  input[type="email"],
  input[type="number"],
  input[type="url"],
  input[type="date"],
  input[type="datetime-local"],
  input[type="month"],
  input[type="week"],
  input[type="time"],
  input[type="search"],
  input[type="tel"],
  select,
  select[multiple],
  textarea {
    border-color: var(--inputs__border) !important; 
    background: var(--inputs__background) !important;

    {% if settings.input_field_border == "bottom" %}
      border-top: 0 !important;
      border-left: 0 !important;
      border-right: 0 !important;
      padding-left: 0;
      padding-right: 0;
    {% else %}
      padding-left: 1rem;
      padding-right: 1rem;
    {% endif %}

    {% if settings.input_field_border == "none" %}
      border: 0 !important;
      padding-left: 0;
      padding-right: 0;
    {% else %}
      padding-left: 1rem;
      padding-right: 1rem;
    {% endif %}
  }

  input[type="checkbox"],
  input[type="radio"] {
    border-color: var(--inputs__border) !important; 
  }

  .border--input-width,
  .border__input {
    {% if settings.input_field_border == "bottom" %}
      border-top: 0 !important;
      border-left: 0 !important;
      border-right: 0 !important;
    {% endif %}
    {% if settings.input_field_border == "none" %}
      border: 0 !important;
    {% endif %}
  }

  .border--input-style {
    {% if settings.input_field_color_background == "bg-transparent" %}
      padding-left: 0;
      padding-right: 0;
    {% else %}
      padding-left: 1rem;
      padding-right: 1rem;
    {% endif %}
  }

  /* Banner overlaps */
  .banner--overlap {
    margin-top: -{{ settings.header_overlap_desktop }}px;
    padding-top: {{ settings.header_overlap_desktop }}px;
  }
  .section--overlap {
    margin-top: -{{ settings.header_overlap_desktop }}px;
  }
  @media (max-width: 767px) {
    .banner--overlap {
      margin-top: -{{ settings.header_overlap_mobile }}px;
      padding-top: {{ settings.header_overlap_mobile }}px;
    }
    .section--overlap {
      margin-top: -{{ settings.header_overlap_mobile }}px;
    }
  }

  /* Banner heights */
  .banner--h-xl {
    height: calc(100svh - {{ settings.header_overlap_desktop }}px);
  }
  .banner--h-l {
    height: calc(90svh - {{ settings.header_overlap_desktop }}px);
  }
  @media (max-width: 767px) {
    .banner--h-xl {
      height: calc(100svh - {{ settings.header_overlap_mobile }}px);
    }
    .banner--h-l {
      height: calc(90svh - {{ settings.header_overlap_mobile }}px);
    }
  }

  /* Animate css classes */
  {% if settings.enable_animated_images %}

    /* Fade in images */
    .js-image {
      opacity: 0.8;
      filter: blur(16px);
    }
    .js-image.loaded {
      opacity: 100 !important;
      filter: blur(0);
    }

    /* Picture will pulse while loading */
    .js-picture {
      animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
    }

    /* Remove pulse after loading */
    .js-picture.loaded {
      animation: none;
    }

    /* Hide palceholders after loading */
    .js-picture.loaded .js-placeholder {
      opacity: 0;
    }

  {% endif %}

{% endstyle %}
