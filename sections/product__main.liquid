<!-- sections/product__main.liquid -->
{% comment %} 
  Loop through different blocks to create a product page.

  Globals:
  - layout_horizontal: {string} Horizontal margin from global theme settings.
  - layout_header_overlap: {variable} Overlap of the header from global theme settings.
  - layout_header_position: {variable} Position of the header from global theme settings.

  Recommendations:
  - Multiple product templates can be created from the theme editor.
{% endcomment %}

{% comment %} Create product script, assign correct gallery style, set column widths {% endcomment %}
{% liquid
  assign is_product_template = true 
  capture script_product
    render 'script__product', gallery_style: section.settings.media_gallery_style, is_product_template: is_product_template, enable_default_selling_plan_widget: section.settings.enable_default_selling_plan_widget
  endcapture

  if section.settings.media_gallery_style == 'grid'
    capture gallery_snippet
      render 'product__gallery-grid'
    endcapture
  elsif section.settings.media_gallery_style == 'slider'
    capture gallery_snippet
      render 'product__gallery-slider'
    endcapture
  else
    capture gallery_snippet
      render 'product__gallery-thumbnail-slider'
    endcapture
  endif

  capture left_column_width
    echo section.settings.layout_column_width | append: "%"
  endcapture
  capture right_column_width
    echo 100 | minus: section.settings.layout_column_width | append: "%"
  endcapture

  assign has_left_positioned_options_block = false
  for block in section.blocks
    if block.type == 'options' and block.settings.position == 'left'
      assign has_left_positioned_options_block = true
    endif
  endfor
%}

<section 
  id="{{ section.id }}"
  class="
    relative z-30 animation-1000
    {{ section.settings.color_border }}
    {{ section.settings.style_border }}
    {% unless section.settings.enable_color_fade %}
      {{ section.settings.color_text }}
      {% unless section.settings.color_scheme == 'custom' %}
        {{ section.settings.color_scheme }}
      {% endunless %}
    {% endunless %}
  "
  {% if section.settings.color_scheme == 'custom' %}
    {% unless section.settings.enable_color_fade %}
      style="
        background:{{ section.settings.color_background }};
      "
    {% endunless %}
  {% endif %}
  {% if section.settings.enable_color_fade %}
    :class="`${body_background_color} ${body_text_color}`"
    :style="{ background: body_background_color }"
    x-intersect.margin.-50%="
      body_background_color = '{% if section.settings.color_scheme == 'custom' %}{{ section.settings.color_background }}{% else %}{{ section.settings.color_scheme }}{% endif %}';
      body_text_color = '{{ section.settings.color_text }}';
    "
  {% endif %}>

  <div 
    class="
      flex flex-row flex-wrap
      {% if section.settings.enable_header_overlap %}
        section--overlap
      {% endif %}
    "
    x-data="{{ script_product }}"
    x-init="
      attachStandardForm();
      initProductForm();
    "
    x-ref="formContainer"
    @keyup.left.window="galleryScrollBack();"
    @keyup.right.window="galleryScrollNext();">

    {% comment %} If gallery is top {% endcomment %}
    {% if section.settings.media_gallery_position == 'top' %}
      <div 
        class="
          w-full
          {% if section.settings.enable_media_margin %}
            {{ settings.x_margin }}
          {% endif %}
        "
        {% if section.settings.enable_header_overlap %}
          x-init="
            has_banner_overlap = true;
            header_color = header_overlay_color;
            header_border = header_overlay_border;
          "
        {% endif %}>
        {{ gallery_snippet }}
      </div>
    {% endif %}

    {% comment %} Columns {% endcomment %}
    {% capture form_class %}
      w-full
      {{ section.settings.media_border }}
    {% endcapture %}
    {% form "product", product,
      class: form_class,
      x-ref: 'productForm'
    %}
      <div 
        class="
          w-full !px-0
          {% if section.settings.enable_main_margin %}
            {{ settings.x_margin }}
          {% else %}
            window--full
          {% endif %}
        "
        style="
          padding-top:{{ section.settings.spacing_top }}px;
          padding-bottom:{{ section.settings.spacing_bottom }}px;
        "
        x-data="{ 
          {% for block in section.blocks %}
            {% case block.type %}
            {% when 'drawer' %}
              drawer_{{ block.id }}: false,
            {% when 'pickup' %}
              drawer_{{ block.id }}: false,
            {% endcase %}
          {% endfor %}
        }">
        <div class="flex flex-wrap items-start">
          
          {% comment %} First column {% endcomment %}
          <div 
            class="md:w-[{{ left_column_width }}] flex-grow w-full md:sticky top-4 z-30"
            :class="{
              {% if has_left_positioned_options_block %}
                '!z-40' : has_overlay,
              {% endif %}
            }"
            {% if settings.header_position == 'sticky' %}
              :style="{
                top: header_bar_height + 'px'
              }"
            {% endif %}
            {% if section.settings.media_gallery_position == 'left' %}
              {{ gallery_snippet }}
            {% endif %}
            {% for block in section.blocks %}
              {% if block.settings.position == "left" %}
              {% case block.type %}

                {% when 'list' %}
                  {% render 'product__list', block: block %}
                  
                {% when 'tabs' %}
                  {% render 'product__tabs', block: block %}

                {% when 'linked_products' %}
                    {% render 'product__linked-products', block: block %}

                {% when 'breadcrumb' %}
                  {% render 'product__breadcrumb', block: block %}
                
                {% when 'title' %}
                  {% render 'product__title', block: block %}

                {% when 'price' %}
                  <div 
                    class="
                      px-4
                      {{ block.settings.color_scheme }}
                      {{ block.settings.color_border }}
                      {{ block.settings.style_border }}
                    "
                    style="
                      padding-top:{{ block.settings.spacing_top }}px;
                      padding-bottom:{{ block.settings.spacing_bottom }}px;
                    "
                    x-show="current_variant_exists">
                    <div class="relative flex items-end justify-between">
                      {% render 'product__price', block: block %}
                    </div>
                    <div class="mt-1 type--small">
                      {{ form | payment_terms }}
                    </div>
                  </div>

                {% when 'custom' %}
                  {% render 'product__custom-field', block: block %}
                
                {% when 'text' %}
                  {% render 'product__text', block: block %}

                {% when 'description' %}
                  {% render 'product__description', block: block %}

                {% when 'accordion' %}
                  {% render 'product__accordion', block: block %}

                {% when 'drawer' %}
                  {% render 'product__drawer-button', block: block %}

                {% when 'inventory' %}
                  {% render 'product__inventory', block: block %}
                  
                {% when 'pickup' %}
                  {% render 'product__pickup-button', block: block %}  

                {% when 'rating' %}
                  {% render 'product__rating', block: block %}

                {% when 'liquid' %}
                  {% render 'product__liquid', block: block %}
                  
                {% when 'upsell' %}
                  {% render 'product__upsell', block: block %}

                {% when 'options' %}
                  <div 
                    class="
                      options
                      {{ block.settings.color_scheme }}
                      {{ block.settings.color_border }}
                      {{ block.settings.style_border }}
                    "
                    style="
                      padding-top:{% if product.selected_or_first_available_selling_plan_allocation or product.has_only_default_variant == false %}{{ block.settings.spacing_top }}px;{% else %}0;{% endif %}
                      padding-bottom:{% if product.selected_or_first_available_selling_plan_allocation or product.has_only_default_variant == false %}{{ block.settings.spacing_bottom }}px;{% else %}0;{% endif %}
                    ">
                    {% render 'product__options', 
                      block: block,
                      is_product_template: is_product_template,
                      enable_default_selling_plan_widget: section.settings.enable_default_selling_plan_widget
                    %}
                  </div>

                {% when 'add' %}
                  <div
                    class="
                      {{ block.settings.color_scheme }}
                      {{ block.settings.color_border }}
                      {{ block.settings.style_border }}
                    "
                    style="
                      padding-top:{{ block.settings.spacing_top }}px;
                      padding-bottom:{{ block.settings.spacing_bottom }}px;
                    ">
                    {% render 'product__add', 
                      block: block,
                      is_product_template: is_product_template
                    %}
                    {% if block.settings.enable_dynamic_checkout %}
                      <div 
                        class="px-4 mt-4 color__inherit"
                        x-show="current_variant_exists && current_variant_available">
                        {{ form | payment_button }}
                      </div>
                    {% endif %}
                    {% unless block.settings.content == blank %}
                      <div class="w-full px-4 mt-4">
                        <div class="p-2 space-y-4 text-center type--small color__bg-shade-1 border--radius">
                          {{ block.settings.content }}
                        </div>
                      </div>
                    {% endunless %}
                  </div>

                {% when 'bundle' %}
                  {% render 'product__bundle', block: block %}  

              {% endcase %}
              {% endif %}
            {% endfor %}
          </div>

          {% comment %} Second column {% endcomment %}
          <div 
            class="md:w-[{{ right_column_width }}] flex-grow w-full md:sticky top-4 z-30"
            :class="{
              {% unless has_left_positioned_options_block %}
                '!z-40' : has_overlay,
              {% endunless %}
            }"
            {% if settings.header_position == 'sticky' %}
              :style="{
                top: header_bar_height + 'px'
              }"
            {% endif %}>
            {% if section.settings.media_gallery_position == 'right' %}
              {{ gallery_snippet }}
            {% endif %}
            {% for block in section.blocks %}
              {% if block.settings.position == "right" %}
              {% case block.type %}

                {% when 'list' %}
                  {% render 'product__list', block: block %}
                  
                {% when 'tabs' %}
                  {% render 'product__tabs', block: block %}
                  
                {% when 'linked_products' %}
                  {% render 'product__linked-products', block: block %}
                  
                {% when 'breadcrumb' %}
                  {% render 'product__breadcrumb', block: block %}
                
                {% when 'title' %}
                  {% render 'product__title', block: block %}

                {% when 'price' %}
                  <div 
                    class="
                      px-4
                      {{ block.settings.color_scheme }}
                      {{ block.settings.color_border }}
                      {{ block.settings.style_border }}
                    "
                    style="
                      padding-top:{{ block.settings.spacing_top }}px;
                      padding-bottom:{{ block.settings.spacing_bottom }}px;
                    "
                    x-show="current_variant_exists">
                    <div class="relative flex items-end justify-between">
                      {% render 'product__price', block: block %}
                    </div>
                    <div class="mt-1 type--small">
                      {{ form | payment_terms }}
                    </div>
                  </div>

                {% when 'custom' %}
                  {% render 'product__custom-field', block: block %}
                
                {% when 'text' %}
                  {% render 'product__text', block: block %}

                {% when 'description' %}
                  {% render 'product__description', block: block %}

                {% when 'accordion' %}
                  {% render 'product__accordion', block: block %}

                {% when 'drawer' %}
                  {% render 'product__drawer-button', block: block %}

                {% when 'inventory' %}
                  {% render 'product__inventory', block: block %}
                  
                {% when 'pickup' %}
                  {% render 'product__pickup-button', block: block %}  

                {% when 'rating' %}
                  {% render 'product__rating', block: block %}

                {% when 'liquid' %}
                  {% render 'product__liquid', block: block %}
                  
                {% when 'upsell' %}
                  {% render 'product__upsell', block: block %}

                {% when 'options' %}
                  <div 
                    class="
                      options
                      {{ block.settings.color_scheme }}
                      {{ block.settings.color_border }}
                      {{ block.settings.style_border }}
                    "
                    style="
                    padding-top:{% if product.selected_or_first_available_selling_plan_allocation or product.has_only_default_variant == false %}{{ block.settings.spacing_top }}px;{% else %}0;{% endif %}
                    padding-bottom:{% if product.selected_or_first_available_selling_plan_allocation or product.has_only_default_variant == false %}{{ block.settings.spacing_bottom }}px;{% else %}0;{% endif %}
                    ">
                    {% render 'product__options', 
                      block: block,
                      is_product_template: is_product_template,
                      enable_default_selling_plan_widget: section.settings.enable_default_selling_plan_widget
                    %}
                  </div>

                {% when 'add' %}
                  <div
                    class="
                      {{ block.settings.color_scheme }}
                      {{ block.settings.color_border }}
                      {{ block.settings.style_border }}
                    "
                    style="
                      padding-top:{{ block.settings.spacing_top }}px;
                      padding-bottom:{{ block.settings.spacing_bottom }}px;
                    ">
                    {% render 'product__add', 
                      block: block,
                      is_product_template: is_product_template
                    %}
                    {% if block.settings.enable_dynamic_checkout %}
                      <div 
                        class="px-4 mt-4 color__inherit"
                        x-show="current_variant_exists && current_variant_available">
                        {{ form | payment_button }}
                      </div>
                    {% endif %}
                    {% unless block.settings.content == blank %}
                      <div class="w-full px-4 mt-4">
                        <div class="p-2 space-y-4 text-center type--small color__bg-shade-1 border--radius">
                          {{ block.settings.content }}
                        </div>
                      </div>
                    {% endunless %}
                  </div>

                {% when 'bundle' %}
                  {% render 'product__bundle', block: block %}  

              {% endcase %}
              {% endif %}
            {% endfor %}
            {% for block in section.blocks %}
              {% case block.type %}
                {% when '@app' %}
                  {% render block %}
              {% endcase %}
            {% endfor %}
          </div>
          
          {% for block in section.blocks %}
            {% case block.type %}
            {% when 'stickyadd' %}
              {% render 'product__stickyadd', block: block %}
            {% when 'drawer' %}
              {% render 'product__drawer-content', block: block %}
            {% when 'pickup' %}
              {% render 'product__pickup-content', block: block %}
            {% endcase %}
          {% endfor %}

        </div>
      </div>
    {% endform %}

    {% comment %} If gallery is below {% endcomment %}
    {% if section.settings.media_gallery_position == 'bottom' %}
      <div 
        class="
          w-full
          {% if section.settings.enable_media_margin %}
            {{ settings.x_margin }}
          {% endif %}
        ">
        {{ gallery_snippet }}
      </div>
    {% endif %}

    {% comment %} Fullscreen zoom gallery {% endcomment %}
    {% if section.settings.enable_zoom %}
      {% render 'product__gallery-fullscreen' %}
    {% endif %}

  </div>

</section>

