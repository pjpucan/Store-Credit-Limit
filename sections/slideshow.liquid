<!-- sections/slideshow.liquid -->
{% comment %} 
This is a banner component with either a background image or video and a text overlay.

  Globals:
  - layout_horizontal: {string} Class string to set horizontal margin.
  - enable_animations: {boolean} Global setting to determine if animations are enabled.
  - layout_header_overlap: {integer} Size when setting header overlap.

  Recommendations:
  - Use images or videos that contrast well with the text overlay.
{% endcomment %}

{% liquid
  
  if section.settings.show_entire_image
    assign image_classes = ' object-contain'
  else
    assign image_classes = ' object-cover h-full w-full'
  endif

  assign enable_lazy_load = true
  if section.index == 1
    assign enable_lazy_load = false
  endif
  
%}

<section
  class="
    {{ section.settings.visibility }}
    {{ section.settings.color_border }}
    {{ section.settings.style_border }}
    {% if section.settings.enable_border_margin %}
      padding--gap
    {% endif %}
  ">
  <div
    id="{{ section.id }}"
    class="
      group/banner 
      relative overflow-clip flex items-center justify-center !no-underline hover:no-underline hover:opacity-100
      {{ section.settings.color_scheme }} 
      {% if section.settings.enable_header_overlap %}
        banner--overlap
      {% endif %}
      {% if section.settings.enable_border_margin %}
        border--radius
      {% endif %}
    "
    {% if section.settings.url != blank %}
      tabindex="-1"
    {% endif %}
    {% if section.settings.enable_header_overlap %}
      x-init="
        has_banner_overlap = true;
        header_color = header_overlay_color;
        header_border = header_overlay_border;
      "
    {% endif %}
    x-data="{
      mouse_x: 0,
      mouse_y: 0,
    }"
    @mousemove="
      if ($event.clientX - $event.target.getBoundingClientRect().left >= 50 && $event.clientX <= $event.target.getBoundingClientRect().right - 50) {
        mouse_x = $event.clientX - $event.target.getBoundingClientRect().left; 
      }
      if ($event.clientY - $event.target.getBoundingClientRect().top >= 50) {
        mouse_y = $event.clientY - $event.target.getBoundingClientRect().top;
      }
    ">

    {% capture slides %}
      {% for block in section.blocks %}
        <div 
          class="flex justify-center flex-none w-full h-full whitespace-normal md:snap-center"
          x-bind:data-slide="{{ forloop.index0 }}"
          x-show="index == {{ forloop.index0 }}"
          x-transition:enter="animation-300"
          x-transition:enter-start="opacity-0"
          x-transition:enter-end="opacity-100"
          x-transition:leave="animation-300"
          x-transition:leave-start="opacity-100"
          x-transition:leave-end="opacity-0">

          {% if block.settings.url == blank %}<div{% else %}<a href="{{ block.settings.url }}"{% endif %}
            class="
              relative block flex-grow no-underline hover:no-underline group/banner hover:!opacity-100
              {{ block.settings.color_scheme }}
              {{ section.settings.layout_y_spacing }}
            ">
            
            {% comment %} Media {% endcomment %}
            <div 
              class="
                absolute h-full w-full
                {% if settings.enable_animations %}
                  motion-safe:scroll-blurin-2-20
                {% endif %}
              ">
              
              {% comment %} Image background {% endcomment %}
              <div 
                class="absolute w-full h-full animation-1000">

                {% comment %} Desktop image {% endcomment %}
                {% if block.settings.image_background_desktop %}
                  <div class="absolute w-full h-full">
                    {% render 'component__image',
                      image: block.settings.image_background_desktop,
                      max_width: 5760,
                      container_class: 'hidden md:block h-full w-full z-10',
                      image_class: image_classes,
                      crop_class: image_classes,
                      enable_lazy_load: enable_lazy_load,
                      enable_2x: true
                    %}
                  </div>
                {% endif %}

                {% comment %} Mobile image {% endcomment %}
                {% if block.settings.image_background_mobile == blank %}
                  {% if block.settings.image_background_desktop %}
                    <div class="absolute w-full h-full">
                      {% render 'component__image',
                        image: block.settings.image_background_desktop,
                        max_width: 900,
                        container_class: 'block md:hidden w-full h-full z-10',
                        image_class: image_classes,
                        crop_class: image_classes,
                        enable_lazy_load: enable_lazy_load,
                        enable_2x: true
                      %}
                    </div>
                  {% endif %}
                {% else %}
                  <div class="absolute w-full h-full">
                    {% render 'component__image',
                      image: block.settings.image_background_mobile,
                      max_width: 900,
                      container_class: 'block md:hidden w-full h-full z-10',
                      image_class: image_classes,
                      crop_class: image_classes,
                      enable_lazy_load: enable_lazy_load,
                      enable_2x: true
                    %}
                  </div>
                {% endif %}
              </div>

              {% comment %} Video background {% endcomment %}
              {% unless block.settings.video_background == blank %}
                <div class="absolute top-0 bottom-0 left-0 right-0 z-10">
                  {% render 'component__video', 
                    video: section.settings.video_background,
                    container_class: 'max-w-none md:min-h-full min-w-full h-full',
                    video_class: 'object-cover',
                    enable_custom_controls: false,
                    enable_mute_toggle: false,
                    enable_autoplay: true,
                    enable_loop: true
                  %}
                </div>
              {% endunless %}

            </div>

            {% comment %} Banner content {% endcomment %}
            <div 
              class="
                absolute z-10 w-full h-full
                {% if settings.enable_animations %}
                  motion-safe:scroll-blurinandout-5-100
                {% endif %}
              "
              {% if block.settings.enable_gradient %}
                style="background: linear-gradient( to bottom, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.4) );"
              {% endif %}>

              <div 
                class="
                  w-full h-full flex flex-row flex-wrap py-14
                  {{ block.settings.layout_x_alignment }}
                  {{ block.settings.layout_y_alignment }}
                  {% if section.settings.enable_margin %}
                    {{ settings.x_margin }}
                  {% else %}
                    window--full
                  {% endif %}
                ">

                <div 
                  class="
                    gap-4 flex flex-col w-full
                    {% if section.settings.enable_max_width %}max-w-prose{% endif %}
                    {% if block.settings.layout_x_alignment contains 'text-center' %}items-center{% endif %}
                    {% if block.settings.layout_x_alignment contains 'text-right' %}items-end{% endif %}
                    {% if block.settings.enable_background_overlay %}
                      p-4 w-full border--radius {{ block.settings.color_scheme }}
                    {% endif %}
                  ">

                  {% unless block.settings.heading == blank %}
                    <h1 
                      class="
                        m-0
                        {{ block.settings.color_text }}
                      ">
                      {{ block.settings.heading }}
                    </h1>
                  {% endunless %}

                  {% unless block.settings.content == blank %}
                    <div 
                      class="
                        space-y-4
                        {{ block.settings.color_text }}
                      ">
                      {{ block.settings.content }}
                    </div>
                  {% endunless %}

                  {% unless block.settings.button_url == blank %}
                    <div 
                      class="
                        md:flex-nowrap flex flex-wrap gap-2
                        {% if block.settings.layout_x_alignment contains 'text-center' %}justify-center{% endif %}
                        {% if block.settings.layout_x_alignment contains 'text-right' %}justify-end{% endif %}
                      ">
                      {% if block.settings.url == blank %}<a href="{{ block.settings.button_url }}"{% else %}<button{% endif %}
                        class="{{ block.settings.color_button }}">
                        {{ block.settings.button_label }}
                      {% if block.settings.url == blank %}</a>{% else %}</button>{% endif %}
                      {% unless block.settings.secondary_button_url == blank %}
                        {% if block.settings.url == blank %}<a href="{{ block.settings.secondary_button_url }}"{% else %}<button{% endif %}
                          class="{{ block.settings.secondary_color_button }}">
                          {{ block.settings.secondary_button_label }}
                        {% if block.settings.url == blank %}</a>{% else %}</button>{% endif %}
                      {% endunless %}
                    </div>
                  {% endunless %}
                  
                </div>

              </div>
            </div>
            
          {% if block.settings.url == blank %}</div>{% else %}</a>{% endif %}
        
        </div>
      {% endfor %} 
    {% endcapture %}

    <div class="flex flex-wrap w-full">
      <div
        class="relative w-full"
        x-data="
          {
            index: 0,
            index_scroll: 0,
            index_size: {{ section.blocks.size | minus: 1 }},
            width: '0%',
            currentWidth: 0,
            
            incrementCount: {{ section.settings.auto_scroll_delay }}000 / 100,
            autoIncrement() {
              const incrementAmount = 100 / this.incrementCount;
              const startInterval = () => {
                const interval = setInterval(() => {
                  this.currentWidth += incrementAmount;
                  this.width = this.currentWidth + '%';
                  if (this.currentWidth >= 100) {
                    this.scrollNext();
                    clearInterval(interval);
                    this.currentWidth = 0;
                    this.width = this.currentWidth + '%';
                    startInterval();
                  }
                }, 100);
              };
              startInterval();
            },

            scrollNext() {
              if(this.index < this.index_size){
                this.index++
              } else {
                this.index = 0
              }
            },

            scrollBack() {
              if(this.index == 0){
                this.index = this.index_size
              } else {
                this.index--
              }
            }
          }
        ">

        {% comment %} Slides {% endcomment %}
        <div
          class="relative inline-flex w-full h-full overflow-clip whitespace-nowrap md:snap-x scroll-smooth hidescrollbar"
          x-ref="slider">
          {{ slides }}
        </div>

        {% if section.blocks.size > 1 %}
        {% comment %} Arrows {% endcomment %}
        <button
          title="{{ 'actions.previous' | t }}"
          type="button"
          class="absolute top-0 bottom-0 left-0 z-10 items-center justify-center hidden w-12 pl-4 overflow-hidden opacity-0 md:flex group cursor-w-resize hover:opacity-100"
          @click="scrollBack()">
        </button>
        <button
          title="{{ 'actions.next' | t }}"
          class="absolute top-0 bottom-0 right-0 z-10 items-center justify-center hidden w-12 pr-4 overflow-hidden opacity-0 md:flex group cursor-e-resize hover:opacity-100"
          @click="scrollNext()">
        </button>
        
        {% comment %} Indicators {% endcomment %}
        <div
          class="
            absolute left-0 bottom-0 right-0 z-10 flex flex-wrap items-end text-center justify-center mix-blend-difference {{ settings.x_margin }}
          ">
          <div class="relative flex items-center gap-2 p-2 !rounded-b-none color__bg-shade-1 border--radius">
            <button
              title="{{ 'actions.previous' | t }}"
              class="btn btn--smaller btn--outline-alt !border-0"
              @click="scrollBack()">
              {% render 'component__icon', icon: 'chevron-left', size: '16', class: '' %}
            </button>
            {% for block in section.blocks %}
              <button
                aria-label="gallery_grid_button_0"
                class="w-2 h-2 bg-white opacity-25 animation-300--all border--radius"
                :class="{ '!opacity-100 !w-3': index === {{ forloop.index0 }} }"
                @click="index = {{ forloop.index0 }}">
                <span class="sr-only">{{ 'actions.next' | t }}</span>
              </button>
            {% endfor %}
            <button
              title="{{ 'actions.next' | t }}"
              class="btn btn--smaller btn--outline-alt !border-0"
              @click="scrollNext()">
              {% render 'component__icon', icon: 'chevron-right', size: '16', class: '' %}
            </button>
          </div>
        </div>

        {% comment %} Progress bar {% endcomment %}
        {% if section.settings.auto_scroll_delay > 0 %}
          <div 
            class="absolute bottom-0 left-0 right-0 w-full h-0.5 opacity-75 color__bg-text mix-blend-difference"
            x-init="
              autoIncrement()
            ">
            <div class="color__bg-text">
              <div 
                class="h-0.5 transition-all duration-100 color__bg-body opacity-50" 
                :style="{ width: width }"></div>
            </div>
          </div>
        {% endif %}
      {% endif %}
      </div>
    </div>

  </div>
</section>

