<!-- sections/store-locator.liquid -->
{% comment %} 
  View store locations with details for each.

  Globals:
  - layout_horizontal: {string} Class string to set horizontal margin.
  - maps_api_key: {string} Google maps API key
  - color_background_secondary: {string} Color hexcode to set map icon
{% endcomment %}

<section 
  id="{{ section.id }}"
  class="
    animation-1000
    {{ section.settings.visibility }}
    {{ section.settings.color_border }}
    {{ section.settings.style_border }}
    {% unless section.settings.enable_color_fade %}
      {{ section.settings.color_text }}
      {% unless section.settings.color_scheme == 'custom' %}
        {{ section.settings.color_scheme }}
      {% endunless %}
    {% endunless %}
  "
  {% if section.settings.color_scheme == 'custom' %}
    {% unless section.settings.enable_color_fade %}
      style="
        background:{{ section.settings.color_background }};
      "
    {% endunless %}
  {% endif %}
  {% if section.settings.enable_color_fade %}
    :class="`${body_background_color} ${body_text_color}`"
    :style="{ background: body_background_color }"
    x-intersect.margin.-50%="
      body_background_color = '{% if section.settings.color_scheme == 'custom' %}{{ section.settings.color_background }}{% else %}{{ section.settings.color_scheme }}{% endif %}';
      body_text_color = '{{ section.settings.color_text }}';
    "
  {% endif %}
  x-data="{
    activeAccordion: 0,
    initMap: () => {

      // Create a new map object
      var map = new google.maps.Map(document.getElementById('map'), {
        center: {lat: 37.09024, lng: -95.712891},
        zoom: 10,
        zoomControl: true,
        mapTypeControl: false,
        scaleControl: true,
        streetViewControl: false,
        rotateControl: false,
        fullscreenControl: false
      });

      let icon = {
        path: 'M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z M9,10a3,3 0 1,0 6,0a3,3 0 1,0 -6,0',
        fillColor: '{{ settings.color_background_secondary }}',
        fillOpacity: 1,
        strokeWeight: 0,
        scale: 1
      }

      let markers = [];
      {% for block in section.blocks %}
        markers[{{ forloop.index0 }}] = new google.maps.Marker({
          position: {lat: {{ block.settings.latitude }}, lng:{{ block.settings.longitude }}},
          map: map,
          icon: icon,
          title: '{{ block.settings.store_name }}'
        });
        markers[{{ forloop.index0 }}].addListener('click', () => {
          activeAccordion = {{ forloop.index0 }}
        });
      {% endfor %}

      markers.forEach((marker, index) => {
        return (
          document.querySelector(`#${'store-' + index}`).addEventListener('click', () =>  {
            map.panTo(markers[index].getPosition())
          })
        )
      }) 

      let latLng = markers[0].getPosition(); 
      map.setCenter(latLng);  
    
      const styles = {
        default: [],
        silver: [
          {
            elementType: 'geometry',
            stylers: [{ color: '#f5f5f5' }],
          },
          {
            elementType: 'labels.icon',
            stylers: [{ visibility: 'off' }],
          },
          {
            elementType: 'labels.text.fill',
            stylers: [{ color: '#616161' }],
          },
          {
            elementType: 'labels.text.stroke',
            stylers: [{ color: '#f5f5f5' }],
          },
          {
            featureType: 'administrative.land_parcel',
            elementType: 'labels.text.fill',
            stylers: [{ color: '#bdbdbd' }],
          },
          {
            featureType: 'poi',
            elementType: 'geometry',
            stylers: [{ color: '#eeeeee' }],
          },
          {
            featureType: 'poi',
            elementType: 'labels.text.fill',
            stylers: [{ color: '#757575' }],
          },
          {
            featureType: 'poi.park',
            elementType: 'geometry',
            stylers: [{ color: '#e5e5e5' }],
          },
          {
            featureType: 'poi.park',
            elementType: 'labels.text.fill',
            stylers: [{ color: '#9e9e9e' }],
          },
          {
            featureType: 'road',
            elementType: 'geometry',
            stylers: [{ color: '#ffffff' }],
          },
          {
            featureType: 'road.arterial',
            elementType: 'labels.text.fill',
            stylers: [{ color: '#757575' }],
          },
          {
            featureType: 'road.highway',
            elementType: 'geometry',
            stylers: [{ color: '#dadada' }],
          },
          {
            featureType: 'road.highway',
            elementType: 'labels.text.fill',
            stylers: [{ color: '#616161' }],
          },
          {
            featureType: 'road.local',
            elementType: 'labels.text.fill',
            stylers: [{ color: '#9e9e9e' }],
          },
          {
            featureType: 'transit.line',
            elementType: 'geometry',
            stylers: [{ color: '#e5e5e5' }],
          },
          {
            featureType: 'transit.station',
            elementType: 'geometry',
            stylers: [{ color: '#eeeeee' }],
          },
          {
            featureType: 'water',
            elementType: 'geometry',
            stylers: [{ color: '#c9c9c9' }],
          },
          {
            featureType: 'water',
            elementType: 'labels.text.fill',
            stylers: [{ color: '#9e9e9e' }],
          },
        ]
      };

      {% if section.settings.map_style == blank %}
        map.setOptions({ styles: styles['default'] });
      {% else %}      
        map.setOptions({ styles: styles['{{ section.settings.map_style }}'] });
      {% endif %}
    }
  }" 
  x-init="initMap()">
  <div
    class="
      {% if section.settings.enable_margin %}
        {{ settings.x_margin }}
      {% endif %}
    "
    style="
      padding-top:{{ section.settings.spacing_top }}px;
      padding-bottom:{{ section.settings.spacing_bottom }}px;
    ">
    <div
      class="
        flex flex-wrap items-start justify-between
        {% if section.settings.enable_split %}
          flex-row
        {% else %}
          flex-col
        {% endif %}
      ">

      {% comment %} Header {% endcomment %}
      <div 
        class="
          flex w-full flex-col
          {% if section.settings.enable_split %}md:w-1/3 md:pr-4{% endif %}
          {% unless section.settings.enable_margin %}
            px-4
          {% endunless %}
        ">
        {% render 'component__section-header' %} 
      </div>

      {% comment %} Content {% endcomment %}
      <div 
        class="
          w-full relative
          {% if section.settings.enable_split %}md:w-2/3{% endif %}
        ">
        {% if section.settings.enable_dynamic_map %}
          <div id="map" class="!sticky top-0 color__bg-overlay-1 border--radius mobile-border--b0-radius color__border-divider-1 border--width md:h-[500px] h-96 flex-1 w-full h-full "></div>
        {% else %}
          {{ section.settings.image | image_url: height: 1000 | image_tag: class: 'color__bg-overlay-1 border--radius w-full max-h-[500px]', loading: 'lazy', alt: block.settings.image_featured.alt }}
        {% endif %}

        <div class="color__bg-body gap-4 p-4 flex flex-col border--radius mobile-border--t0-radius z-10 w-full md:w-1/3 md:max-h-[500px] overflow-auto md:absolute right-[10px] top-[10px]">
          {% for block in section.blocks %}
            {% case block.type %}
               {% when 'store' %}
                  {% render 'component__accordion',
                     open: false,
                     enable_once: true,
                     index: forloop.index0,
                     container_class: '',
                     inner_class: '',
                     button_class: '',
                     button_label: block.settings.store_name,
                     content: block.settings.store_details %}
            {% endcase %}
          {% endfor %}
        </div>

      </div>

    </div>
  </div>
</section>

{% # theme-check-disable ParserBlockingJavaScript, RemoteAsset %}
<script 
  src="https://maps.googleapis.com/maps/api/js?key={{ settings.maps_api_key }}"
  defer>
</script>
{% # theme-check-enable ParserBlockingJavaScript, RemoteAsset %}

