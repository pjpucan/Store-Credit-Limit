          <div class="py-4 md:hidden
            {{ section.settings.main_color_scheme }}
            {{ section.settings.main_color_border }}">
            <div 
              class="
                flex flex-col items-start gap-2
                {{ settings.x_margin }}
              ">

                {{ block.settings.html }}
        
            </div>
          </div>

