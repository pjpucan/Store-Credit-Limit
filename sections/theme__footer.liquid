<!-- sections/theme__footer.liquid -->
{% comment %}
This file is responsible for the site-wide footer. It includes various settings and options for customization.

Globals:
- layout_horizontal: {string} Class string to set horizontal margin.
- enable_animations: {boolean} Indicates if animations should be enabled.
- enable_region: {boolean} Indicates if the region selector should be enabled/disabled.
- enable_language: {boolean} Indicates if the language selector should be enabled/disabled.
- enable_audio: {boolean} Indicates if audio is enabled.
- type_seperator: {string} Setting to pick the type of separator between text.
- social_tiktok_link: {string} URL for TikTok profile.
- social_instagram_link: {string} URL for Instagram profile.
- social_twitter_link: {string} URL for Twitter profile.
- social_facebook_link: {string} URL for Facebook profile.
- social_pinterest_link: {string} URL for Pinterest profile.
- social_snapchat_link: {string} URL for Snapchat profile.
- social_tumblr_link: {string} URL for Tumblr profile.
- social_discord_link: {string} URL for Discord profile.
- social_linkedin_link: {string} URL for LinkedIn profile.
- social_twitch_link: {string} URL for Twitch profile.
- social_youtube_link: {string} URL for YouTube profile.
- social_vimeo_link: {string} URL for Vimeo profile.
{% endcomment %}

<footer 
  id="{{ section.id }}"
  class="
    relative z-40
    {{ section.settings.visibility }}
  "
  :class="{
    '!-z-10' : has_overlay
  }">

  {% comment %} Mobile {% endcomment %}
  <div 
    class="
      md:hidden border--t-width
      {{ section.settings.main_color_border }}
      {{ section.settings.main_color_scheme }}
    ">
    {% for block in section.blocks %}
      {% case block.type %}
        
        {% comment %} Newsletter {% endcomment %}
        {% when 'newsletter' %}
          {% form 'customer' %}
            <section class="py-6 md:hidden border--b-width
              {{ section.settings.main_color_scheme }}
              {{ section.settings.main_color_border }}">
              <div 
                class="
                  flex flex-col items-start gap-2
                  {{ settings.x_margin }}
                ">
          
                {% unless block.settings.heading == blank %}
                  <h3 class="type__heading type__heading-5">
                    {{ block.settings.heading }}
                  </h3>
                {% endunless %}
          
                {% if form.errors %}
                  <div class="p-2 mt-2 color__bg-overlay-1 type--small border--radius">
                    {{ form.errors | default_errors }}
                  </div>
                {% endif %}
          
                {% if form.posted_successfully? %}
                  <div class="space-y-4 type--small">
                    {{ block.settings.success }}
                  </div>
                {% else %}
                  <div class="space-y-4">
                    {{ block.settings.content }}
                  </div>
                  <label 
                    class="sr-only"
                    for="customer_email_footer_mobile">
                    {{ 'labels.email' | t }}
                  </label>
                  <input 
                    id="customer_email_footer_mobile"
                    class="flex-grow form-input" 
                    name="contact[email]"
                    type="email"
                    placeholder="{{ 'actions.email_placeholder' | t }}" 
                    autocorrect="off" 
                    autocapitalize="off"/>
                  <button 
                    class="
                      whitespace-nowrap btn
                      {{ section.settings.main_color_button }}
                    "
                    type="submit">
                    <span class="btn__content">{{ block.settings.button }}</span>
                  </button>
                  {% unless block.settings.disclaimer == blank %}
                    <div class="space-y-4 opacity-50 type--smaller">
                      {{ block.settings.disclaimer }}
                    </div>
                  {% endunless %}
                {% endif %}
          
              </div>
            </section>
          {% endform %}

        {% comment %} Content {% endcomment %}
        {% when 'content' %}
          <div class="py-6 md:hidden border--b-width
            {{ section.settings.main_color_scheme }}
            {{ section.settings.main_color_border }}">
            <div 
              class="
                flex flex-col items-start gap-2
                {{ settings.x_margin }}
              ">

              {% capture logo_size %}
                height: {{ block.settings.logo_mobile_height }}px;
                width: {{ block.settings.logo_mobile_height | times: block.settings.logo.aspect_ratio }}px;
              {% endcapture %}

              {% if block.settings.logo %}
                <a class="relative items-center block" 
                  style="{{ logo_size }}"
                  href="{{ routes.root_url }}" 
                  title="{{ shop.name }}">
                  {{ block.settings.logo
                  | image_url: width: 400
                  | image_tag: style: 'object-fit:cover', class: 'w-full h-full !bg-transparent object-contain', alt: block.settings.logo.alt }}
                </a>
              {% endif %}

              {% unless block.settings.heading == blank %}
                <h3 class="type__heading type__heading-5">
                  {{ block.settings.heading }}
                </h3>
              {% endunless %}
            
              {% unless block.settings.content == blank %}
                <div class="space-y-4">
                  {{ block.settings.content }}
                </div>
              {% endunless %}

              {% unless block.settings.button_url == blank %}
                <a 
                  class="
                    btn
                    {{ section.settings.main_color_button }}
                  "
                  href="{{ block.settings.button_url }}">
                  {{ block.settings.button_label }}
                </a>
              {% endunless %}
        
            </div>
          </div>

        {% comment %} Menu {% endcomment %}
        {% when 'menu' %}
          <div class="pt-4 md:hidden">
          
          {% unless block.settings.menu == blank %}
            {% capture accordion_content %}
            <nav 
              class="
                md:hidden flex flex-col gap-4 pt-4
                {{ section.settings.main_color_scheme }}
              ">
              {% for link in block.settings.menu.links %}
                {% if link.levels >= 1 %}
                  <div 
                    class="
                      flex flex-col gap-4 pl-4 border--l-width
                      {{ section.settings.main_color_border }}
                      {% if settings.enable_animations %}
                        motion-safe:scroll-fadein-2-20
                      {% endif %}
                    ">
                    {% for child_link in link.links %}
                      <a 
                        class="
                          flex items-center justify-between w-full pt-4 no-underline type__body
                          {{ section.settings.main_color_border }}
                        "
                        href="{{ child_link.url }}">
                        {{ child_link.title }}
                      </a>
                      {% for grandchild_link in child_link.links %}
                        <a 
                          class="
                            flex items-center justify-between w-full pt-4 no-underline type__body pl-4
                            {{ section.settings.main_color_border }}
                          "
                          href="{{ child_link.url }}">
                          {{ grandchild_link.title }}
                        </a>
                      {% endfor %}
                    {% endfor %}
                  </div>
                {% else %}

                  <a 
                    class="
                      flex items-center justify-between w-full px-4 no-underline type__body
                      {{ section.settings.main_color_border }}
                    "
                    href="{{ link.url }}">
                    {{ link.title }}
                  </a>

                {% endif %}
              {% endfor %}
            </nav>
            {% endcapture %}

            {% render 'component__accordion',
              inner_class: 'px-4',
              button_class: 'px-4',
              button_label: block.settings.heading,
              content: accordion_content,
              is_button: false
            %}
            
          {% endunless %}
          </div>

        {% comment %} Map {% endcomment %}
