<!-- sections/navigation-slider.liquid -->
{% comment %} 
  Slideshow similar to instagram stories component.

  Globals:
  - layout_horizontal: {string} Class string to set horizontal margin.

  Recommendations:
  - Use this to highlight key pages and navigation.
{% endcomment %}

{% assign slider_size = section.blocks.size | minus: 1 %}
{% capture slides %}
  {% for block in section.blocks %}
    <div 
      class="
        flex justify-center flex-none snap-start
        {% if settings.enable_animations %}
          motion-safe:scroll-fadeinhalf-inline-2-20
        {% endif %}
      " 
      style="
        width:{{ section.settings.style_size }}px;
      "
      x-bind:data-slide="{{ forloop.index0 }}"
      x-intersect:enter.half="index = {{ forloop.index0 }};">
    
      <div 
        class="flex w-full ">
        <a href="{{ block.settings.url }}"
          class="flex flex-row flex-wrap overflow-hidden text-center no-underline whitespace-nowrap text-ellipsis">
          {% if block.settings.image == blank %}
            <div 
              class="relative mb-1 overflow-hidden object-cover rounded-full aspect-[1/1] aspect-w-1 aspect-h-1"
              style="
                width:{{ section.settings.style_size }}px;
              ">
              {% case forloop.index %}
                {% when 1 %}
                  <div class="w-full h-full">
                    {{ 'product-apparel-1' | placeholder_svg_tag: 'w-full h-full' }}
                  </div>
                {% when 2 %}
                  <div class="w-full h-full">
                    {{ 'product-apparel-2' | placeholder_svg_tag: 'w-full h-full' }}
                  </div>
                {% when 3 %}
                  <div class="w-full h-full">
                    {{ 'product-apparel-3' | placeholder_svg_tag: 'w-full h-full' }}
                  </div>
                {% when 4 %}
                  <div class="w-full h-full">
                    {{ 'collection-apparel-1' | placeholder_svg_tag: 'w-full h-full' }}
                  </div>
                {% when 5 %}
                  <div class="w-full h-full">
                    {{ 'collection-apparel-2' | placeholder_svg_tag: 'w-full h-full' }}
                  </div>
              {% endcase %}
              {% if forloop.index > 5 %}
                <div class="w-full h-full">
                  {{ 'product-apparel-1' | placeholder_svg_tag: 'w-full h-full' }}
                </div>
              {% endif %}
            </div>
          {% else %}
            <div 
              class="mb-1 "
              style="
                width:{{ section.settings.style_size }}px;
              ">
              <div 
                class="
                  rounded-full overflow-hidden object-cover aspect-[1/1] aspect-w-1 aspect-h-1
                ">
                {% render 'component__image', 
                  image: block.settings.image,
                  max_width: 512,
                  container_class: 'h-full w-full',
                  background_class: 'color__bg-shade-2',
                  ratio_class: 'aspect-[1/1]',
                  crop_class: 'object-cover',
                  enable_lazy_load: true,
                  enable_2x: true
                %}
              </div>
            </div>
          {% endif %}
          <div 
            class="w-full">
            <p class="mb-0 truncate type--small">{{ block.settings.heading }}</p>
          </div>
        </a>
      </div>
      
    </div>
  {% endfor %}
{% endcapture %}

<section 
  id="{{ section.id }}"
  class="
    animation-1000
    {{ section.settings.visibility }}
    {{ section.settings.color_border }}
    {{ section.settings.style_border }}
    {% unless section.settings.enable_color_fade %}
      {{ section.settings.color_text }}
      {% unless section.settings.color_scheme == 'custom' %}
        {{ section.settings.color_scheme }}
      {% endunless %}
    {% endunless %}
  "
  {% if section.settings.color_scheme == 'custom' %}
    {% unless section.settings.enable_color_fade %}
      style="
        background:{{ section.settings.color_background }};
      "
    {% endunless %}
  {% endif %}
  {% if section.settings.enable_color_fade %}
    :class="`${body_background_color} ${body_text_color}`"
    :style="{ background: body_background_color }"
    x-intersect.margin.-50%="
      body_background_color = '{% if section.settings.color_scheme == 'custom' %}{{ section.settings.color_background }}{% else %}{{ section.settings.color_scheme }}{% endif %}';
      body_text_color = '{{ section.settings.color_text }}';
    "
  {% endif %}>
  <div 
    class="
      !px-0 
      {% if section.settings.enable_margin %}
        {{ settings.x_margin }}
      {% endif %}
    "
    style="
      padding-top:{{ section.settings.spacing_top }}px;
      padding-bottom:{{ section.settings.spacing_bottom }}px;
    ">

    <div 
      class="flex flex-wrap">
      <div
        class="w-full">
        {% render 'component__slider',
          container_class: '!px-4',
          slider_size: slider_size,
          slides: slides,
          enable_arrows_over: true,
          enable_default_gap: true,
        %} 
      </div>
    </div>
    
  </div>
</section>

